<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Your Interests"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="You may select up to 5 topics"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Interest Buttons -->
        <GridLayout
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAlgo"
                android:text="Algorithms"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDS"
                android:text="Data Structures"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonWebDev"
                android:text="Web Development"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonTesting"
                android:text="Testing"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAI"
                android:text="AI"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMobile"
                android:text="Mobile Apps"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSecurity"
                android:text="Cybersecurity"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUX"
                android:text="UX Design"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </GridLayout>

        <Button
            android:id="@+id/buttonNext"
            android:text="Next"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FF00"/>
    </LinearLayout>
</ScrollView>
